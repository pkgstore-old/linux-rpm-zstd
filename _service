  <service name="obs_scm">
    <param name="scm">git</param>
    <param name="url">https://github.com/pkgstore/linux-rpm-zstd.git</param>
    <param name="version">_none_</param>
    <param name="filename">zstd</param>
    <param name="extract">*</param>
  </service>
